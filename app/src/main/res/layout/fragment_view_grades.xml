<!-- res/layout/fragment_view_grades.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Use CardView to create a box-like appearance -->
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <!-- Add necessary UI elements to display grades -->
        <TextView
            android:id="@+id/gradesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade Marks"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Add more TextViews, ImageViews, or other UI elements as needed -->
    </androidx.cardview.widget.CardView>

</LinearLayout>
